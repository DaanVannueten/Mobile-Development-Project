{
  "expo": {
    "name": "project_mobile_dev",
    "slug": "project_mobile_dev",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "projectmobiledev",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF6B35"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Deze app heeft toegang nodig tot je camera om foto's van maaltijden te maken.",
        "NSPhotoLibraryUsageDescription": "Deze app heeft toegang nodig tot je fotobibliotheek om foto's van maaltijden te selecteren.",
        "NSPhotoLibraryAddUsageDescription": "Deze app heeft toegang nodig tot je fotobibliotheek om foto's op te slaan."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FF6B35"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.sebastiaah.project_mobile_dev",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "5b64aa26-64ce-41ec-8ec2-0e68f97f4283"
      }
    },
    "owner": "daan_vnt"
  }
}
